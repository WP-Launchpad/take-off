{
    "name": "wp-launchpad/take-off",
    "description": "Initialisation library for Launchpad",
    "license": "proprietary",
    "type": "library",
    "authors": [
        {
            "name": "coquardcyr",
            "email": "coquardcyr@gmail.com"
        }
    ],
    "require": {
        "wp-launchpad/cli": "^3.1",
        "ext-mbstring": "*",
        "ext-json": "*",
        "composer/composer": "^2.5",
        "brianhenryie/strauss": "^0.14.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 || ^8 || ^9",
        "wp-media/phpunit": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "LaunchpadTakeOff\\": "inc/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaunchpadTakeOff\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test-unit": "\"vendor/bin/phpunit\" --testsuite unit --colors=always --configuration tests/Unit/phpunit.xml.dist",
        "test-integration": "\"vendor/bin/phpunit\" --testsuite integration --colors=always --configuration tests/Integration/phpunit.xml.dist",
        "run-tests": [
            "@test-unit",
            "@test-integration"
        ]
    }
}
